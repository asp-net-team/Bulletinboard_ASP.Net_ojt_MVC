@model Bulletinboard.Web.Models.PostViewModel

@{
    ViewBag.Title = "Post create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="border border-success">
        <div class="bg-success">
            <p class="h5 py-2 px-2 text-white">Post registration</p>
        </div>
        <div class="mx-auto my-5 col-md-11">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row mb-3">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-form-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-3">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-form-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextAreaFor(model => model.Description,new { @class = "form-control", rows="7", @maxlength="50" } )
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-12 text-center">
                <input type="submit" value="Create" class="btn btn-primary col-1" />
                <input type="reset" class="btn btn-secondary col-1" value="Clear" />
                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-warning col-1" })
            </div>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
